# Database Configuration
# For Railway deployment, use:
DATABASE_URL=${{Postgres.DATABASE_URL}}

# For local development, use individual variables:
DB_NAME=calmconnect_db
DB_USER=postgres
DB_PASSWORD=your_secure_password_here
DB_HOST=localhost
DB_PORT=5432

# Django Settings
DJANGO_DEBUG=True
DJANGO_SECRET_KEY=your-secret-key-here-change-in-production
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# OpenAI API (if using AI features)
OPENAI_API_KEY=your-openai-api-key-here

# Email Settings (PRODUCTION CONFIGURATION)
# Gmail SMTP (Recommended for Railway)
EMAIL_HOST=smtp.gmail.com
EMAIL_HOST_USER=your-gmail@gmail.com
EMAIL_HOST_PASSWORD=your-app-password-here
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_USE_SSL=False
DEFAULT_FROM_EMAIL=your-gmail@gmail.com
SERVER_EMAIL=your-gmail@gmail.com

# Alternative: Outlook/Hotmail SMTP
# EMAIL_HOST=smtp-mail.outlook.com
# EMAIL_HOST_USER=your-email@outlook.com
# EMAIL_HOST_PASSWORD=your-password-here
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_USE_SSL=False

# Alternative: SendGrid SMTP
