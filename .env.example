# CalmConnect Environment Configuration
# Copy this file to .env and update with your actual values

# === CRITICAL SECURITY SETTINGS ===
# Generate a new secret key: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
DJANGO_SECRET_KEY=your-very-long-random-secret-key-here-minimum-50-characters

# IMPORTANT: Set to False in production
DJANGO_DEBUG=False

# Your production domain(s)
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com,www.your-domain.com

# === DATABASE (Recommended: PostgreSQL) ===
# For production, use PostgreSQL instead of SQLite
# DATABASE_URL=postgresql://username:password@localhost:5432/calmconnect_db

# === EMAIL SETTINGS ===
EMAIL_HOST=smtp.gmail.com
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
EMAIL_PORT=587
EMAIL_USE_TLS=True

# === API KEYS ===
OPENAI_API_KEY=your-openai-api-key-here

# === SECURITY SETTINGS ===
# Session timeout in seconds (default: 1209600 = 2 weeks)
SESSION_COOKIE_AGE=3600

# Additional security headers
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True
X_FRAME_OPTIONS=DENY

# === RATE LIMITING ===
RATELIMIT_ENABLE=True
RATELIMIT_VIEW_DEFAULT=100/h
RATELIMIT_LOGIN_ATTEMPTS=5/5m

# === LOGGING ===
LOG_LEVEL=INFO
LOG_FILE=logs/calmconnect.log
